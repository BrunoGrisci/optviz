<input type="range" min="30000" max="50000" value="0.0" step="2.0" id="timestep"/>


<script id="brushing">// quantitative color scale

var selecteds = []

var zcolorscale = d3.scale.linear()
  .domain([-2,-0.5,0.5,2])
  .range(["brown", "#999", "#999", "steelblue"])
  .interpolate(d3.interpolateLab);

var pc = d3.parcoords()("#example")
  //.color(color)
  .alpha(0.4);

var selected = false;
var sel_dim = ' DSSP';
var file_name = 'data/STEPS/30000.csv'

function getMaxOfArray(numArray) {
    return Math.max.apply(null, numArray);
}

// update color
function change_color(dimension) {
  sel_dim = dimension;
  pc.svg.selectAll(".dimension")
    .style("font-weight", "normal")
    .filter(function(d) {return d == dimension; })
    .style("font-weight", "bold");

  pc.color(zcolor(pc.data(),dimension)).render();
  
  pc.clear("highlight");                                  
  for (s in selecteds) {
    pc.highlight([selecteds[s]]);
  }
  d3.selectAll([pc.canvas.foreground, pc.canvas.brushed]).classed("faded", false);  
  
}

// return color function based on plot and dimension
function zcolor(col, dimension) {
  var z = zscore(_(col).pluck(dimension).map(parseFloat))
  return function(d) { return zcolorscale(z(d[dimension])) }
};

// color by zscore
function zscore(col) {
  var n = col.length,
      mean = _(col).mean(),
      sigma = _(col).stdDeviation();
  return function(d) {
    return (d-mean)/sigma;
  };
};

function parallelCoordinates(file_name) {
    // load csv file and create the chart
    d3.csv(file_name, function(data) {      

/*    var dimensions = {
        'DSSP': {
            yscale: log,
            tickFormat: function(d){
                return log.tickFormat(4,d3.format(",d"))(d);
            }
        },
        'power (hp)': {
            title: "MMhhm Power",
            innerTickSize: 10,
            outerTickSize: 20
        },
        'AMINO ACID': {
            orient: 'right',
            type: 'string',
            tickPadding: 0,
            innerTickSize: 8
        }
    };*/

      pc
        .dimensions({})   
        .data([]) 
        .data(data)     
        .render() 
        .reorderable()
        .brushMode("1D-axes");  // enable brushing
      
      pc.dimensions()[' DSSP'].yscale.domain([0,20]);
      pc.dimensions()[' SASA'].yscale.domain([21,36]);
      pc.dimensions()[' GYRATE'].yscale.domain([0.7,1.2]);
      pc.dimensions()[' ENERGY'].yscale.domain([-90360,-77565]);
      pc.dimensions()[' RMSF'].yscale.domain([0.2,0.4]);   
      pc.updateAxes();
      
      /*for (d in pc.dimensions()) {      
        console.log(pc.dimensions()[d].yscale.domain());
      }  
      console.log(pc.dimensions()); */
             
      change_color(sel_dim);

      // create data table, row hover highlighting
      
      var grid = d3.divgrid();
      d3.select("#grid")
        //.datum(data.slice(0,5))
        .datum(data)
        .call(grid)
        .selectAll(".row")
        .on({
          "click": function(d) { 
                //pc.highlight([d]);
                var i = selecteds.indexOf(d); 
                if (i > -1) {
                    selecteds.splice(i, 1);
                }
                else {
                    selecteds.push(d);                
                    console.log(selecteds); 
                }  

            },
          "mouseover": function(d) { pc.highlight([d]); },
          "mouseout": function() {//pc.unhighlight;
                                  pc.clear("highlight");                                  
                                  for (s in selecteds) {
                                    pc.highlight([selecteds[s]]);
                                  }
                                  d3.selectAll([pc.canvas.foreground, pc.canvas.brushed]).classed("faded", false);
                                 }
        });
        
     pc.svg.selectAll(".dimension")
        .on("click", change_color)
        .selectAll(".label");
        //.style("font-size", "14px");  
        
/*      pc.on("highlight", function(d) {
            //console.log(d);
        }
      );  */
        
      // update data table on brush event
      pc.on("brush", function(d) {
        console.log(pc.brushed());
        d3.select("#grid")
          //.datum(d.slice(0,10))
          .datum(d)
          .call(grid)
          .selectAll(".row")
        .on({
          "click": function(d) { 
                //pc.highlight([d]);
                var i = selecteds.indexOf(d); 
                if (i > -1) {
                    selecteds.splice(i, 1);
                }
                else {
                    selecteds.push(d);                
                    console.log(selecteds); 
                }  

            },
          "mouseover": function(d) { pc.highlight([d]); },
          "mouseout": function() {//pc.unhighlight;
                                  pc.clear("highlight");                                  
                                  for (s in selecteds) {
                                    pc.highlight([selecteds[s]]);
                                  }
                                  d3.selectAll([pc.canvas.foreground, pc.canvas.brushed]).classed("faded", false);
                                 }
        });
      });
      
        d3.select("#timestep").on("change", function() {
		    d3.select("#step").text(this.value);
            parallelCoordinates('data/STEPS/' + this.value.toString() + '.csv');
        });
      
    });
}

parallelCoordinates(file_name);
</script>
